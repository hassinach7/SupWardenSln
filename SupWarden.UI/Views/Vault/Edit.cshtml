@using SupWarden.UI.ViewModels.Vault
@model UpdateVaultVM
@{
    ViewData["Title"] = "Update Vault";
}

<link href="~/css/vault/CreateElementVaultstyle.css"
      rel="stylesheet" asp-append-version="true" />

<div class="custom-container">
    <div class="form-container update-vault-container">

        @if (ViewData["IsUpdated"] != null)
        {
            <div style="margin-bottom: 15px;text-align:center;">
                <p class="alert alert-success">The Vault has been updated successfully.</p>
            </div>
        }

        <form asp-action="Edit" asp-controller="Vault" method="post" autocomplete="off">

            <input hidden asp-for="Id" />

            <h1 class="custom-h1">Update Vault: @Model.Label</h1>

            <div style="margin-bottom: 15px;">
                <input class="custom-input" placeholder="Enter the Label" asp-for="Label" />
            </div>

            <div class="checkbox-container">
                <input class="custom-checkbox" type="checkbox" asp-for="IsPrivate" />
                <label class="custom-label" asp-for="IsPrivate">Private </label>
            </div>

            <div>
                <button type="submit" class="custom-button">Update</button>
            </div>

            <div style="margin-top: 15px;" class="alert alert-danger text-danger" asp-validation-summary="All">
            </div>

        </form>
    </div>
</div>
