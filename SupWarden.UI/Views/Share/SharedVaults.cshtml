@using SupWarden.Dto.Dtos.Share
@using SupWarden.Models.Enums
@model IEnumerable<ShareDto>
@{
    ViewData["Title"] = "Shared Vaults";
}

<div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
    <div>
        <h3 class="fw-bold mb-3">Shared Vaults</h3>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card card-round">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <!-- Shared Vaults table -->
                    <table class="table align-items-center mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col" class="text-end">Vault Name</th>
                                <th scope="col" class="text-end">Permission Level</th>
                                <th scope="col" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var share in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        <button class="btn btn-icon btn-round btn-success btn-sm me-2">
                                            <i class="fa fa-share-alt"></i>
                                        </button>
                                    </th>
                                    <td class="text-end">@share.Vault.Label</td>
                                    <td class="text-end">
                                        @switch (share.Permission)
                                        {
                                            case PermissionLevel.Creator:
                                                <span>Creator</span>
                                                break;
                                            case PermissionLevel.Editor:
                                                <span>Editor</span>
                                                break;
                                            case PermissionLevel.Reader:
                                                <span>Reader</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="row">
                                            @if (share.Permission == PermissionLevel.Editor || share.Permission == PermissionLevel.Creator)
                                            {
                                                <div class="col-md-12 col-4 mt-1">
                                                    <a asp-controller="Share" asp-action="Edit" asp-route-id="@share.Vault.Id" class="btn btn-sm btn-warning">Update</a>
                                                </div>
                                            }
                                            <div class="col-md-12 col-4 mt-1">
                                                <a asp-controller="Share" asp-action="Details" asp-route-id="@share.Vault.Id" class="btn btn-sm btn-primary">View</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center">No shared vaults available.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
