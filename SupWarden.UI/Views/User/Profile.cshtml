@model IEnumerable<SupWarden.Dto.Dtos.User.UserDto>
@{
    ViewData["Title"] = "Users Profiles";
}

<link href="~/css/user/UserProfileStyle.css" rel="stylesheet" asp-append-version="true" />

<div class="custom-container">
    <div class="form-container user-list-container">

        <h1 class="custom-h1">Users Profiles</h1>

        @if (!Model.Any())
        {
            <div style="text-align: center; margin: 15px;">
                <p>No users found in the system.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">UserName</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Email</td>
                                <td>@user.UserName</td>
                                <td>@user.PhoneNumber</td>
                                 
                                <td>
                                    <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
